{
  "description": "SMS notifications for Claude Code events - monitors errors, idle time, and task completion",
  "hooks": {
    "PostToolUseFailure": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/handle-error.js",
            "async": true,
            "timeout": 30,
            "statusMessage": "Reporting error to SMS server..."
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/handle-activity.js",
            "async": true,
            "timeout": 15,
            "statusMessage": "Updating activity status..."
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/handle-idle.js",
            "async": true,
            "timeout": 30,
            "statusMessage": "Checking idle status..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/handle-completion.js",
            "async": true,
            "timeout": 30,
            "statusMessage": "Reporting task completion..."
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/handle-session-end.js",
            "timeout": 60,
            "statusMessage": "Cleaning up session..."
          }
        ]
      }
    ]
  }
}

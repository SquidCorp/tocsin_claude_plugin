{
  "hooks": {
    "PostToolUseFailure": [
      {
        "matcher": ".*",
        "env": {
          "CLAUDE_HOOK_TOOL_NAME": "{{toolName}}",
          "CLAUDE_HOOK_ERROR_OUTPUT": "{{errorOutput}}"
        },
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/src/handle-error.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/src/handle-activity.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/src/handle-session-end.sh"
          }
        ]
      }
    ]
  }
}

{
  "description": "SMS notifications for Claude Code events",
  "hooks": {
    "PostToolUseFailure": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/handle-error.sh",
            "env": {
              "CLAUDE_HOOK_TOOL_NAME": "{{toolName}}",
              "CLAUDE_HOOK_ERROR_OUTPUT": "{{errorOutput}}"
            }
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/handle-activity.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/handle-session-end.sh"
          }
        ]
      }
    ]
  }
}

{
  "name": "claude-sms-notifier",
  "version": "1.0.0",
  "description": "Get SMS notifications when Claude Code needs attention",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "mock:server": "bun run tests/mock-server.ts",
    "dev": "bun run --watch src/index.ts"
  },
  "dependencies": {
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.4.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0"
  },
  "peerDependencies": {
    "bun": ">=1.3.0"
  }
}

{
  "name": "claude-sms-notifier",
  "version": "1.0.0",
  "description": "Get SMS notifications when Claude Code needs attention",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "mock:server": "bun run tests/mock-server.ts",
    "dev": "bun run --watch src/index.ts"
  },
  "dependencies": {
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.8",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.3.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "bun": "^1.3.8"
  }
}
